<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SyncoStronbo.Pages.Main"
             Title="Home">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button  x:Name="btnCreate" Clicked="btnCreateClicked" FontSize="Title" Margin="10" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="End" Text="Create" WidthRequest="200" />
        <Button x:Name="btnEnter"   Clicked="btnEnterClicked" FontSize="Title" Margin="10" Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Start" Text="Enter"  WidthRequest="200"/>

    </Grid>
</ContentPage>